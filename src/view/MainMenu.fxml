<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainMenuController" alignment="CENTER" spacing="20">
    <Text text="Welcome to Scrabble Game!" style="-fx-font: 24 arial;"/>
    <Button fx:id="startGameButton" text="Start Game" onAction="#startGame" minWidth="200" style="-fx-font: 18 arial;"/>
    <Button fx:id="helpButton" text="Help" onAction="#showHelp" minWidth="200" style="-fx-font: 18 arial;"/>
    <Button fx:id="statsButton" text="Show Statistics" onAction="#showStatistics" minWidth="200" style="-fx-font: 18 arial;"/>
</VBox>
