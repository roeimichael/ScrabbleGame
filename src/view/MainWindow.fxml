<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainWindowController">
   <top>
      <HBox fx:id="buttonContainer" alignment="CENTER">
         <children>
            <Label fx:id="resLabel" prefHeight="18.0" prefWidth="36.0" text="Label" />
            <Button fx:id="helpButton" mnemonicParsing="false" onAction="#showHelp" text="Help" />
            <Button fx:id="restartButton" mnemonicParsing="false" onAction="#restartGame" text="Restart Game" />
            <Label fx:id="letterSelected" prefHeight="13.0" prefWidth="47.0" text="letter" />
         </children>
      </HBox>
   </top>
   <center>
      <GridPane fx:id="gameBoard" prefHeight="381.0" prefWidth="615.0" BorderPane.alignment="CENTER">
         <!-- This grid will be populated in the controller -->
      </GridPane>
   </center>
   <right>
      <VBox>
         <ListView fx:id="letterList" minHeight="390.0" minWidth="84.0" prefHeight="390.0" prefWidth="84.0" />
      </VBox>
   </right>
</BorderPane>
